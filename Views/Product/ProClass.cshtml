<link href="../css/pro-add.css" rel="stylesheet">
<link href="~/css/pro-class.css" rel="stylesheet">
<link href="../css/icheck/all.css" rel="stylesheet">

   <div class="row">
    <div class="col-lg-8" style="">
            <span id ="errorMsg"></span>
            <div class="panel panel-primary" style="margin-left:0px; margin-right:10px">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            分類列表
                        </div>
                        <!--div class="col-lg-1">
                        <button type="button" class="btn btn-warning btn-proUpdate" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增</button>
                    </div -->
                    </div>
                </div>
                <div class="panel-body">
                    <table id="myDataTable" class="table table-striped table-bordered  table-condensed" style="font-size:14px;">
                        <thead>
                            <tr>
                                <th width="10%">#</th>
                                <th width="15%">分類編號</th>
                                <th width="43%">分類名稱</th>
                                <th width="8%">啟用</th>
                                <th width="24%"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    <div class="col-lg-4" style="border-left: 2px solid rgba(141, 138, 138, 0.25); height: 600px;">
        <h4 class="modal-title" style="margin-left:30px;">新增分類</h4>
        <hr style="margin-left:20px; margin-right:20px">
            <form role="form" action="@Url.Action("ProCreateClass")" method="POST"  style="margin-left:30px; margin-right:30px">
                <div class="form-group">
                    <label for="inputProClassNo">分類編號</label>
                    <input type="text" class="form-control col-lg-2" id="inputProClassNo" name="pro_class_no" placeholder="">
                </div>
                <div class="form-group" style="margin-top: 15px;">
                    <label for="inputProClassName">分類名稱</label>
                    <input type="text" class="form-control" id="inputProClassName" name="pro_class_name">
                </div>
                <div class="form-group">
                    <label for="inputProClassDesc">敘述</label>
                    <textarea class="form-control" id="inputProClassDesc" name="pro_class_desc" rows="5"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">新增</button>
                </div>
        </form>
    </div>
</div>

<!-- Modal update-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="editForm">
            <form id="myFormEdit" action="@Url.Action("ProUpdateClass")" method="POST">
                <div class="modal-header panel-heading">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title " id="myModalLabel">修改分類</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputProClassNo">分類編號</label>
                        <input type="text" class="form-control col-lg-2" id="editProClassNo" name="pro_class_no" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="inputProClassName">分類名稱</label>
                        <input type="text" class="form-control" id="editProClassName" name="pro_class_name">
                    </div>
                    <div class="form-group">
                        <label for="inputProClassDesc">敘述</label>
                        <textarea class="form-control" id="editProClassDesc" name="pro_class_desc" rows="5"></textarea>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="editClassActive" name="class_active"> 啟用
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="editAppSer" name="app_ser" value="" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary">修改</button>
                </div>
           </form>
       </div>
    </div>
</div>



<!-- Modal Delete confirm-->
<div class="modal fade" id="myModalDelet" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">刪除確認</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="inputProClassNo">分類編號：</label>
                    <label id="del-label-classNo"></label>
                </div>
                <div class="form-group">
                    <label for="inputProClassNo">分類名稱：</label>
                    <label id="del-label-className"></label>
                </div>
            </div>
            <div class="modal-footer">   
                <form id="myDeleteForm" action="@Url.Action("ProClasDelete")" method="POST">
                    <input type="hidden" id="del-input-AppSer" name="app_ser" value="" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary" id="btn-delete-submit">刪除</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="../../js/icheck.min.js"></script>
<script src="../../js/jquery.dataTables.js"></script>
<script src="../../js/dataTables.bootstrap.js"></script>
<script src="../../js/app/pro_class.js"></script>
      